<h1>Blog London</h1>
<h2>Aktualna ilosc wpisow(<%= @posts.count %>)</h2>
<br />
<%= link_to 'New Post', new_post_path %>
<% if @posts.count > 0 %>
<% @posts.each do |post| %>
<h2><%= link_to post.title, show_post_path(id: post.id) %></h2>
<h4><%= truncate post.content, value: 50 %> </h4>
<h4><%= link_to 'Edit Post', edit_post_path(id: post.id) %></h4>
<h4><%= link_to 'Skasuj Post', destroy_post_path(id: post.id), method: :delete %></h4>
<% end %>
<% else %>
<h2>Nie ma nic do pokazania</h2>
<% end %>

